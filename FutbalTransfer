  <script>
    function toggleMode() {
      document.body.classList.toggle('dark-mode');
    }

    const transfers = [
      { name: "Kylian Mbapp√©", club: "Real Madrid" },
      { name: "Victor Osimhen", club: "Chelsea" },
      { name: "Jude Bellingham", club: "Real Madrid" },
      { name: "Erling Haaland", club: "Manchester City" }
    ];

    function searchTransfers() {
      const input = document.getElementById("searchInput").value.toLowerCase();
      const results = transfers.filter(t =>
        t.name.toLowerCase().includes(input) || t.club.toLowerCase().includes(input)
      );

      document.getElementById("results").innerHTML = results.map(t =>
        `<div class="transfer-card"><strong>${t.name}</strong> ‚Üí ${t.club}</div>`
      ).join("");
    }

    const news = [
      "üö® Mbapp√© signs for Real Madrid in record-breaking deal!",
      "üîÑ Osimhen completes move to Chelsea for ‚Ç¨110M.",
      "üó£Ô∏è Haaland linked with surprise move to Bayern Munich.",
      "üìà Bellingham‚Äôs market value hits ‚Ç¨130M after stellar season."
    ];

    let index = 0;
    function updateNewsFeed() {
      document.getElementById("newsFeed").innerHTML = `<p>${news[index]}</p>`;
      index = (index + 1) % news.length;
    }

    setInterval(updateNewsFeed, 3000);
    updateNewsFeed();
  </script>
